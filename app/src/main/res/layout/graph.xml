<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#75018786"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:textColor="@android:color/holo_orange_light"
            android:id="@+id/signin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Total Hours Graph"
            android:textSize="30dp"
            android:textStyle="bold" />


    </LinearLayout>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/graph_date"
            android:layout_width="247dp"
            android:layout_height="100dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/minText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="0dp"
            android:hint="Min Goals"
            android:minHeight="48dp"
            android:textColorHint="@color/white"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/maxText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="0dp"
            android:hint="Max Goals"
            android:minHeight="48dp"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Totaltext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="0dp"
            android:hint="Total Hours Worked"
            android:minHeight="48dp"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/NumberofDays"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="0dp"
            android:hint="Number Of Days"
            android:minHeight="48dp"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/sbutton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="1dp"
            android:singleLine="true"
            android:text="SAVE"
            android:backgroundTint="@color/design_default_color_secondary"
            android:textColor="@color/white" />
    </TableRow>


    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/graph"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_weight="1" />

    </TableRow>






</LinearLayout>